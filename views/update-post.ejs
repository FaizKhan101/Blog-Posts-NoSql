<%- include("./includes/head") %>
    <link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include("./includes/header") %>
    <main>
        <h1>Update Post</h1>
        
        <form action="/post-update" method="POST">
            <div class="form-control">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required value="<%= post.title %>">
            </div>

            <div class="form-control">
                <label for="summary">Summary:</label>
                <input type="text" id="summary" name="summary" required value="<%= post.summary %>">
            </div>

            <div class="form-control">
                <label for="description">Description:</label>
                <textarea name="description" id="description" rows="5"><%= post.description %></textarea>
            </div>
            <input type="hidden" name="postId" value="<%= post._id %>">
            <button type="submit" class="btn">Update</button>
        </form>
    </main>
    <%- include("./includes/end") %>